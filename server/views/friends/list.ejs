<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>
<!-- Main Content -->
<main class="container">
    <div class="row">
    <div class="col-md-offset-3 col-md-10">
    <h1><%= title %></h1>
    <% if(typeof displayName=='string' && displayName) { %>
                <a href="/friend-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Friend </a>
        <br>
    <% } %>
    <br>
    <table class= "table table-borderless table-hover table-sm table-striped table-responsive-md table-dark">
    <thead class="thead-dark">
    <tr class="d-flex">
    <% if(typeof displayName=='string' && displayName) { %>
        <th class="text-center col-2">Name</th>
        <th class="text-center col-2">Username</th>
        <th class="text-center col-4">Description</th>
        <th class="text-center col-3">Email</th>
        <th class="text-center col-2">Number</th>
        <th class="text-center col-1"></th>
        <th class="text-center col-1"></th>
    <% } else { %>
        <th class="text-center col-2">Name</th>
        <th class="text-center col-2">Username</th>
        <th class="text-center col-4">Description</th>
        <th class="text-center col-3">Email</th>
        <th class="text-center col-2">Number</th>
    <% } %>
    </tr>
    </thead>
    <tbody>
    <% for(let count= 0; count < Friendlist.length; count ++) {%>
        <tr class="d-flex">
        <% if(typeof displayName=='string' && displayName) { %>
            <td class="text-center col-2" style="word-wrap: break-word;"><%= Friendlist[count].name %></td>
            <td class="text-center col-2" style="word-wrap: break-word;"><%= Friendlist[count].userName %></td>
            <td class="text-center col-4" style="word-wrap: break-word;"><%= Friendlist[count].description %></td>
            <td class="text-center col-3" style="word-wrap: break-word;"><%= Friendlist[count].email %></td>
            <td class="text-center col-2" style="word-wrap: break-word;"><%= Friendlist[count].number %></td>
            <td class="text-center col-1" style="word-wrap: break-word;">
                <a href="/friend-list/edit/<%= Friendlist[count]._id %>"
                class="btn btn-primary">
                    <i class="fas fa-pencil"></i> </a>
                </td>
            <td class="text-center col-1">
                <a href="/friend-list/delete/<%= Friendlist[count]._id %>"
                class="btn btn-danger">
                <i class="fas fa-xmark"></i> </a>
                </td>
        <% } else { %> 
            <td class="text-center col-2" style="word-wrap: break-word;"><%= Friendlist[count].name %></td>
            <td class="text-center col-2" style="word-wrap: break-word;"><%= Friendlist[count].userName %></td>
            <td class="text-center col-4" style="word-wrap: break-word;"><%= Friendlist[count].description %></td>
            <td class="text-center col-3" style="word-wrap: break-word;"><%= Friendlist[count].email %></td>
            <td class="text-center col-2" style="word-wrap: break-word;"><%= Friendlist[count].number %></td>
        <% } %> 
        </tr>
    <% } %>
    </table>
    </div>
</div>
</main>
<%- include ('../partials/bottom_nav.ejs') %>
<%- include ('../partials/footer.ejs')%> 